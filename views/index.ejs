<!DOCTYPE html>
<html>
<head>
  <title>Library - Dashboard</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="dashboard-header">
    <h1>Library Management</h1>
    <a href="/logout" class="add-book-link" style="background-color: #e67e22;">Logout</a>
  </div>

  <a href="/add" class="add-book-link">Add New Book</a>
  <ul>
    <% books.forEach(book => { %>
      <li>
        <div class="book-info">
          <div class="book-title"><%= book.title %></div>
          <div class="book-author">by <%= book.author %></div>
        </div>
        <div class="book-actions">
          <% if (book.filePath) { %>
            <a href="/view/<%= book._id %>" class="view-button" target="_blank">View Book</a>
          <% } %>
          <button type="submit" class="delete-button" onclick="deleteBook('<%= book._id %>')">Delete</button>
        </div>
      </li>
    <% }) %>
  </ul>

  <form id="deleteForm" method="POST" style="display: none;">
    <input type="hidden" name="_method" value="DELETE">
  </form>

  <script>
    function deleteBook(bookId) {
      if (confirm('Are you sure you want to delete this book?')) {
        const form = document.getElementById('deleteForm');
        form.action = `/delete/${bookId}`;
        form.submit();
      }
    }
  </script>
</body>
</html>

